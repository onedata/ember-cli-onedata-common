<div class="modal-row large-space">
  <div class="row">
    <div class="col-xs-3">
      {{select-2
        content=subjectItems
        value=ace.subject
        optionValuePath="id"
        placeholder="Subject"
        allowClear=false
      }}
    </div>
    <div class="col-xs-3">
      {{#if (eq ace.subject 'user')}}
        {{select-2
          content=systemUsers
          value=ace.user
          optionValuePath="id"
          placeholder="User"
          allowClear=false
        }}
      {{else if (eq ace.subject 'group')}}
        {{select-2
          content=systemGroups
          value=ace.group
          optionValuePath="id"
          placeholder="Group"
          allowClear=false
        }}
      {{/if}}
      {{!-- else: this field should be empty --}}
    </div>
    <div class="col-xs-3">
      {{!-- TODO additional checkboxes --}}
    </div>
    <div class="col-xs-1">
      {{!-- TODO trash --}}
      <a {{action 'removeSelf'}}>
        {{icon 'remove'}}
      </a>
    </div>
    <div class="col-xs-2">
      {{!-- TODO future move up down --}}
      <a {{action 'moveUp'}}>
        {{icon 'move-up'}}
      </a>
      <a {{action 'moveDown'}}>
        {{icon 'move-down'}}
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      Type:
    </div>
    <div class="col-xs-9">
      {{#one-radio-group groupValue=ace.type as |enabledType|}}
        {{#each types as |type|}}
          {{one-radio-button
            label=type
            value=type
            groupValue=enabledType
            }}
        {{/each}}
      {{/one-radio-group}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      Permissions:
    </div>
    <div class="col-xs-9">
      {{!-- {{input value=ace.permissions type='number'}} --}}

      {{#one-checkbox-group groupValues=ace as |enabledPermissions|}}
        {{#each permissionKeys as |permissionType|}}
          {{file-permissions/acl/permission-checkbox
            name=permissionType
            ace=ace
            groupValues=enabledPermissions
          }}
        {{/each}}
      {{/one-checkbox-group}}
    </div>
  </div>
</div>
