{{#if isLoading}}
  <div class="spinner-container spinner-32">
    {{spin-spinner scale=0.2 lines=12 length=20 width=10}}
  </div>
{{else}}
  <div class="file-breadcrumbs-list">
    {{#each breadcrumbsItems as |bitem|}}
      {{file-breadcrumbs-item file=bitem.file changeDir="changeDir"
        useAsRoot=bitem.isRoot}}
    {{/each}}
  </div>
{{/if}}
