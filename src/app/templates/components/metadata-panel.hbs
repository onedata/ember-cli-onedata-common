<div class="row">
  {{#bs-tab fade=false}}
    {{#bs-tab-pane title="Basic"}}
      {{metadata/basic-editor data=data.basic}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="JSON"}}
      {{metadata/json-editor data=data.json}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="RDF"}}
      {{metadata/rdf-editor data=data.rdf}}
    {{/bs-tab-pane}}
  {{/bs-tab}}
</div>
<div class="row save-metadata-row">
  {{#spin-button-onedata buttonType="submit"
    class="btn btn-primary no-outline" spinnerColor="#fff"
    inFlight=isSaving disabled=isSaving
    action="saveAll"}}
    Save metadata
  {{/spin-button-onedata}}
</div>
