<div class="row">
  {{#bs-tab fade=false}}
    {{#bs-tab-pane title="Basic"}}
      {{metadata/basic-editor dataString=metadata.basic}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="JSON"}}
      {{metadata/json-editor dataString=metadata.json}}
    {{/bs-tab-pane}}
    {{#bs-tab-pane title="RDF"}}
      {{metadata/rdf-editor data=metadata.rdf}}
    {{/bs-tab-pane}}
  {{/bs-tab}}
</div>
<div class="row save-metadata-row">
  {{#spin-button-onedata buttonType="submit"
    class="btn btn-primary no-outline" spinnerColor="#fff"
    inFlight=isSaving disabled=(not saveEnabled)
    action="saveAll"}}
    Save all changes
  {{/spin-button-onedata}}

  {{#bs-button
    class="no-outline" disabled=(not saveEnabled)
    type="default"
    action="discardChanges"}}
    Discard changes
  {{/bs-button}}

  {{#if removeAvailable}}
    {{#bs-button
      class="no-outline" disabled=(not removeEnabled)
      type="danger"
      action="removeMetadata"}}
      Remove metadata
    {{/bs-button}}
  {{/if}}
</div>
