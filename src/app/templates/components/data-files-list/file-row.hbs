<td id="file-{{file.id}}" class="file-list-col-file hover-parent">
  <div class="file-icon">
    {{file-icon file=file}}
  </div>
  <div class="file-label-container">
    <div class="file-label truncate" style={{fileLabelStyle}}>
      {{#if file.isBroken}}
        <em>{{t 'components.dataFilesList.fileIsBroken'}}</em>
      {{else}}
        {{file.name}}
      {{/if}}
    </div>
  </div>
  {{data-files-list/file-row-tools file=file readOnly=readOnly
    shareFile='shareFile' toggleFileMetadata='toggleFileMetadata'}}
</td>
<td class="hidden-xs file-list-col-size file-list-col-text nowrap">
  {{file.sizeHumanReadable}}
</td>
