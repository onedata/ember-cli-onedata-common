<td id="file-{{file.id}}" class="file-list-col-file hover-parent">
  <div class="file-icon">
    {{file-icon file=file}}
  </div>
  <div class="file-label">
    {{#truncated-string parentSelector=".file-list-col-file" shrinkBy=100}}
      {{#if file.isBroken}}
        <em>{{t 'components.dataFilesList.fileIsBroken'}}</em>
      {{else}}
        {{file.name}}
      {{/if}}
    {{/truncated-string}}
  </div>
  <div class="file-row-tools">
    {{#if file.hasShare}}
      <div {{action (action 'shareFile') bubbles=false}} class="file-tool file-tool-share">
        {{icon 'share' 'visible-on-parent-hover'}}
      </div>
    {{/if}}
    {{#if file.hasMetadata}}
      <div {{action (action 'showFileMetadata') bubbles=false}} class="file-tool file-tool-metadata">
        {{!-- FIXME: metadata icon --}}
        {{icon 'view-list' 'visible-on-parent-hover'}}
      </div>
    {{/if}}
  </div>
</td>
<td class="hidden-xs file-list-col-size nowrap">
  {{file.sizeHumanReadable}}
</td>
