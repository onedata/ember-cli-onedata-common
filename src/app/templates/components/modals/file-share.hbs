{{#bs-modal open=open body=false footer=false size='lg'
    id="create-share"
    title=(t 'components.modals.fileShare.title')
    openAction="open"
    openedAction="opened"
    closedAction="closed"
    keyboard=(not isBusy)
    autoClose=(not isBusy)
    backdropClose=(not isBusy)
    closeButton=(not isBusy)
  }}
  {{#bs-modal-body class='file-share-modal'}}

    {{#modals/elements/form-row translationBase="components.modals.fileShare.rowName"}}
      {{input type="text" value=shareName autofocus=true
        class="form-control"}}
    {{/modals/elements/form-row}}

    {{#modals/elements/form-row translationBase="components.modals.fileShare.rowShareType"}}
      {{#one-radio-group groupValue=shareType as |st|}}
        {{one-radio-button value="snapshot" groupValue=st
          label=(t 'components.modals.fileShare.rowShareType.snapshot.label')
        }}
        {{one-radio-button value="dynamic" groupValue=st
          label=(t 'components.modals.fileShare.rowShareType.dynamic.label')
        }}
      {{/one-radio-group}}
    {{/modals/elements/form-row}}

    {{#modals/elements/form-row translationBase="components.modals.fileShare.rowPublicAccess"}}
      {{one-checkbox-button checked=sharePublicAccess value="enablePublicAccess"
        label="Enable public access" class="col-xs-12"}}
    {{/modals/elements/form-row}}

  {{/bs-modal-body}}
  {{#bs-modal-footer as |footer|}}
    {{#spin-button-onedata buttonType="submit"
      action=(action "submit")
      class="btn btn-primary no-outline" spinnerColor="#fff"
      inFlight=isSubmitting
      disabled=(not isReadyToSubmit)
    }}
      {{t "common.modal.create"}}
    {{/spin-button-onedata}}
    {{#bs-button action=(action "close" target=footer) type="default"
    }}
      {{t "common.modal.cancel"}}
    {{/bs-button}}
  {{/bs-modal-footer}}
{{/bs-modal}}
