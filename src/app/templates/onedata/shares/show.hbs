<div class="row">
  Name: {{model.name}}
</div>
<div class="row">
  Space: {{model.dataSpace.name}}
</div>
<div class="row">
  Directory path: {{model.file.path}}
</div>
<div class="row">
  Public URL: <a href="{{model.publicUrl}}">{{model.publicUrl}}</a>
</div>

{{share-info-head}}

<div class="op-panel op-panel-azure">
  {{metadata-panel}}
</div>

<div class="op-panel op-panel-red">
  <div class="files-list">
    {{#if directory}}
      {{data-files-list dir=directory openDirInBrowser='openDirInBrowser'
        openFileShareModal='openFileShareModal' goUpButton=true uploadEnabled=false}}
    {{/if}}
  </div>
</div>
