{{share-info-head share=model openDataDir="openDataDir" publishShare="publishShare"}}

<div class="op-panel op-panel-red">
  <div class="files-list">
    {{#if directory}}
      {{data-files-list dir=directory openDirInBrowser='openDirInBrowser'
        openFileShareModal='openFileShareModal'
        breadcrumbsEnabled=true uploadEnabled=false
        downloadMode='shared'}}
    {{/if}}
  </div>
</div>

{{#if publishShareModalOpened}}
  {{modals/publish-share open=publishShareModalOpened share=model}}
{{/if}}
